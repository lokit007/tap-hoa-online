        <button onclick="showalert();">Alert</button>
        <button onclick="showconfirm();">Confirm</button>
        <button onclick="showprompt();">Prompt</button>
        <script>
            function showalert() {
                eModal.alert("Tin nhan hien thi", "Nhan hien thi");
            }
            function showconfirm() {
                eModal.confirm("Tin Nhan hien thi", "Nhan hieu")
                .then(function() {
                    alert("Chon ok");
                }, null);
            }
            function showprompt() {
                eModal.prompt("Tin Nhan hien thi", "Nhan hieu", function() {
                    alert("Chon 1");
                }).then(function() {
                    alert("Chon 2");
                }, null);
            }
        </script>
    </body>

